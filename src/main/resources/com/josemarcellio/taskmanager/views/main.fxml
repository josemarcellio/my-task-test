<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.josemarcellio.taskmanager.controllers.TaskController">
    <TextField fx:id="taskInput" promptText="Enter new task" />
    <Button text="Add Task" onAction="#addTask" />
    <ListView fx:id="taskList" />
    <Button text="Remove Selected Task" onAction="#removeTask" />
</VBox>
